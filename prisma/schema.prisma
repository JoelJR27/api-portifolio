generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id           String              @id @default(uuid())
  projectName  String
  slug         String              @unique
  description  String
  projectLink  String
  githubLink   String?
  image        Image?
  technologies ProjectTechnology[]
}

model Image {
  id           String        @id @default(uuid())
  name         String
  imageLink    String
  project      Project?      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId    String?       @unique
  technology   Technologies? @relation(fields: [technologyId], references: [id], onDelete: Cascade)
  technologyId String?       @unique
}

model Technologies {
  id       String              @id @default(uuid())
  name     String
  logo     Image?
  projects ProjectTechnology[]
}

model User {
  id       String @id @default(uuid())
  username String @unique
  email    String @unique
  password String
}

model Experiences {
  id          String   @id @default(uuid())
  title       String
  description String
  startedAt   DateTime
  finishedAt  DateTime
}

model ProjectTechnology {
  id           String       @id @default(uuid())
  project      Project      @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  projectId    String
  technology   Technologies @relation(fields: [technologyId], references: [id])
  technologyId String
}
